<div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
  <div class="container-fluid px-4 mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-6">
        <% if @reviews.present? %>
          <% @reviews.each do |review| %>
            <div id="review-<%= review.id %>" class="card mb-2 shadow-sm">
              <div class="card-body py-3">
                <div class="mb-2">
                  <h6 class="card-title mb-1">
                    <%= link_to review.shop.name, shop_path(review.shop), 
                                class: 'text-decoration-none text-primary' %>
                  </h6>
                  <small class="text-muted">
                    <%= review.shop.address if review.shop.address.present? %>
                  </small>
                </div>
              
                <div class="rating mb-2 text-start">
                  <% review.rating.times do %>
                    <span class="text-warning">★</span>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <span class="text-muted">☆</span>
                  <% end %>
                </div>
                
                <p class="card-text text-start mb-2 fs-6">
                  <%= review.content %>
                </p>

                <% if review.review_image.present? %>
                  <div class="text-center mb-3">
                    <%= image_tag review.review_image_url, 
                                  class: "img-fluid rounded", 
                                  style: "max-width: 100%; height: auto; max-height: 300px; object-fit: cover;",
                                  alt: t('.posts_tab.review_image_alt') %>
                  </div>
                <% end %>
                
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted fs-7">
                    <%= l review.created_at, format: :short %>
                  </small>
                  
                  <% if logged_in? && review.user == current_user %>
                    <div class="btn-group" role="group">
                      <%= link_to t('defaults.edit'), 
                          edit_shop_review_path(review.shop, review, return_to: 'mypage'),
                          class: 'btn btn-sm btn-outline-primary me-2' %>
        
                      <%= link_to t('defaults.delete'), 
                          shop_review_path(review.shop, review),
                          data: { 
                            'turbo_method': :delete,
                            'turbo_confirm': t('defaults.delete_confirm')
                          },
                          class: 'btn btn-sm btn-outline-danger' %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @reviews,params: { tab: 'reviews' },param_name: :reviews_page,theme: 'bootstrap-5' %>
          </div>
        <% else %>
          <div class="text-center">
            <%= t('defaults.no_reviews') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
