<div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
  <div class="container-fluid px-4 mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-6">
        <% if @reviews.present? %>
          <% @reviews.each do |review| %>
            <div class="card mb-2 shadow-sm">
              <div class="card-body py-3">
                <div class="mb-2">
                  <h6 class="card-title mb-1">
                    <%= link_to review.shop.name, shop_path(review.shop), 
                                class: 'text-decoration-none text-primary' %>
                  </h6>
                  <small class="text-muted">
                    <%= review.shop.address if review.shop.address.present? %>
                  </small>
                </div>
              
                <div class="rating mb-2 text-start">
                  <% review.rating.times do %>
                    <span class="text-warning">★</span>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <span class="text-muted">☆</span>
                  <% end %>
                </div>
                
                <p class="card-text text-start mb-2 fs-6">
                  <%= review.content %>
                </p>

                <% if review.review_image.present? %>
                  <div class="text-center mb-3">
                    <%= image_tag review.review_image_url, 
                                  class: "img-fluid rounded", 
                                  style: "max-width: 100%; height: auto; max-height: 300px; object-fit: cover;",
                                  alt: "レビュー画像" %>
                  </div>
                <% end %>
                
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted fs-7">
                    <%= l review.created_at, format: :short %>
                  </small>
                  
                  <% if logged_in? && review.user == current_user %>
                    <div class="btn-group" role="group">
                      <%= link_to '編集', edit_shop_review_path(review.shop, review, return_to: 'mypage'),
                          class: 'btn btn-sm btn-outline-primary me-2' %>
                            <%= link_to '削除', shop_review_path(review.shop, review, return_to: 'mypage'),
                                data: {
                                  "turbo-method": "delete",
                                  "turbo-confirm": "レビューを削除しますか？"
                                },
                                class: 'btn btn-sm btn-outline-danger' %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center">
            まだレビューを投稿していません。
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
