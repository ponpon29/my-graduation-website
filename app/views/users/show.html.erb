<div class="mypage-container">
  <%= render 'profile_section', user: @user %>

  <% if @user == current_user %>
    
    <ul class="nav nav-tabs justify-content-center" id="shopTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <%= link_to t('.submit'), 
            user_path(@user, tab: 'reviews'), 
            class: "nav-link #{'active' if params[:tab].blank? || params[:tab] == 'reviews'}" %>
      </li>
      <li class="nav-item" role="presentation">
        <%= link_to t('.favorite'), 
            user_path(@user, tab: 'favorites'), 
            class: "nav-link #{'active' if params[:tab] == 'favorites'}" %>
      </li>
    </ul>

    <div class="tab-content" id="shopTabsContent">
      <div class="tab-pane fade <%= 'show active' if params[:tab].blank? || params[:tab] == 'reviews' %>" 
           id="reviews" role="tabpanel">
        <%= render 'reviews_tab' %>
      </div>
      
      <div class="tab-pane fade <%= 'show active' if params[:tab] == 'favorites' %>" 
           id="favorites" role="tabpanel">
        <%= render 'favorites_tab' %>
      </div>
    </div>
  <% end %>
</div>
