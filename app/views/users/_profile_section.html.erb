<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2 class="text-center mb-4"><%= t('.title') %></h2>
      <%= link_to t('defaults.edit'), edit_user_path(@user), class: "btn-ramen-hover" %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
          <td><%= @user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td>
            <% if @user.avatar_url %>
              <%= image_tag @user.avatar_url, class: 'rounded-circle', size: '50x50' %>
            <% else %>
              <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                <i class="fas fa-user text-white"></i>
              </div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
