<div class="card h-100 shadow-sm">
  <% if shop.photo_url.present? %>
    <%= image_tag shop.photo_url, alt: shop.name, class: "card-img-top", 
                  style: "height: 200px; object-fit: cover;" %>
  <% else %>
    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
         style="height: 200px;">
      <i class="fas fa-utensils fa-3x text-muted"></i>
    </div>
  <% end %>
  
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= shop.name %></h5>
    
    <% if shop.address.present? %>
      <p class="card-text text-muted small">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= truncate(shop.address, length: 50) %>
      </p>
    <% end %>
    
    <div class="mt-auto">
      <div class="d-flex gap-2">
        <%= link_to "詳細を見る", shop_path(shop), class: "btn btn-primary btn-sm" %>
        <%= link_to "お気に入り解除", unfavorite_shop_path(shop), method: :delete, 
                    class: "btn btn-outline-danger btn-sm",
                    confirm: "お気に入りから削除しますか？",
                    data: { turbo_method: :delete } %>
      </div>
    </div>
  </div>
</div>
