<div class="card h-100 shadow-sm" id="favorite-shop-<%= shop.id %>">
  <% if shop.photo_url.present? %>
    <%= image_tag shop.photo_url, alt: shop.name, class: "card-img-top", 
                  style: "height: 200px; object-fit: cover;" %>
  <% else %>
    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
         style="height: 200px;">
      <i class="fas fa-utensils fa-3x text-muted"></i>
    </div>
  <% end %>
  
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= shop.name %></h5>
    
    <% if shop.address.present? %>
      <p class="card-text text-muted small">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= truncate(shop.address, length: 50) %>
      </p>
    <% end %>
    
    <div class="mt-auto">
      <div class="d-flex gap-2">
        <%= link_to t('defaults.view_detail'), shop_path(shop), class: "btn btn-outline-primary btn-sm" %>
        <%= link_to t('defaults.remove_favorite'), shop_favorite_path(shop),
                    class: "btn btn-outline-danger btn-sm",
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: t('defaults.favorite_confirm')
                    },
                    remote: true %>
      </div>
    </div>
  </div>
</div>