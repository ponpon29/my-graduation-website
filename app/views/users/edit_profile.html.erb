<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= t('.title') %></h1>
      
      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
        
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :avatar, class: "form-label" %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
          
          <div class='mt-3 mb-3'>
            <% if @user.avatar.present? %>
              <%= image_tag @user.avatar.url,
                            class: 'rounded-circle',
                            id: 'preview',
                            size: '100x100',
                            alt: 'プロフィール画像' %>
            <% else %>
              <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" 
                   style="width: 100px; height: 100px;" 
                   id="preview">
                <i class="fas fa-user text-white" style="font-size: 40px;" aria-hidden="true"></i>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="mb-3">
          <%= f.submit t('helpers.submit.update', default: '更新'), class: "btn-ramen-hover" %>
        </div>
      <% end %>
      
      <div class='text-center mt-3'>
        <%= link_to t('defaults.back', default: '戻る'), user_path(@user), class: "btn-ramen-hover" %>
      </div>
    </div>
  </div>
</div>
