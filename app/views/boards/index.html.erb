<div class="min-vh-100" style="background-color: #F2D1B3; padding-top: 100px; padding-bottom: 2rem;">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8 mx-auto">
        <h2 class="text-center mb-4" style="font-weight: bold;">みんなの投稿</h2>
        <!-- 検索フォーム -->
        <form>
          <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
            <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
          </div>
        </form>
        <!-- 掲示板一覧 -->
        <div class="row">
          <div class="col-12">
            <div class="row">
              <% if @boards.present? %>
                <%= render @boards %>
              <% else %>
                <div class="mb-3">掲示板がありません</div>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
