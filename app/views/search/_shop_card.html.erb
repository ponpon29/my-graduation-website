<div class="card h-100 shadow-sm" id="shop-<%= shop.id %>">
  <% if shop.photo_url.present? %>
    <%= image_tag shop.photo_url, alt: shop.name, class: "card-img-top", 
                  style: "height: 200px; object-fit: cover;" %>
  <% else %>
    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
         style="height: 200px;">
      <i class="fas fa-utensils fa-3x text-muted"></i>
    </div>
  <% end %>
  
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= shop.name %></h5>
    
    <% if shop.address.present? %>
      <p class="card-text text-muted small">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= truncate(shop.address, length: 50) %>
      </p>
    <% end %>
    
    <div class="mt-auto">
      <div class="d-flex gap-2">
        <%= link_to t('defaults.view_detail'), shop_path(shop), class: "btn btn-outline-primary btn-sm" %>
        
        <button onclick="navigateToShop({latitude: '<%= shop.latitude %>', longitude: '<%= shop.longitude %>', name: '<%= shop.name %>'})" 
                class="btn btn-outline-success btn-sm">
          <i class="fas fa-map-marker-alt me-2"></i><%= t('defaults.navigate') %>
        </button>

        <% if current_user.present? %>
          <% if current_user.favorite?(shop) %>
            <%= link_to shop_favorite_path(shop), 
                        data: { turbo_method: :delete, turbo_confirm: t('defaults.favorite_confirm') }, 
                        class: "btn btn-danger btn-sm" do %>
              <i class="fas fa-heart me-1"></i><%= t('defaults.remove_favorite') %>
            <% end %>
          <% else %>
            <%= link_to shop_favorite_path(shop),
                        data: { turbo_method: :post }, 
                        class: "btn btn-outline-danger btn-sm" do %>
              <i class="far fa-heart me-1"></i><%= t('defaults.add_favorite') %>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to login_path, class: "btn btn-outline-secondary btn-sm" do %>
            <i class="far fa-heart me-1"></i><%= t('defaults.favorite_login_required') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>