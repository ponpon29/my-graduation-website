<div class="container">
  <!-- 検索フォーム -->
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <%= search_form_for @q, url: search_shop_path do |f| %>
        <div class="input-group mb-3">
          <%= f.search_field :name_cont, 
              class: 'form-control', 
              placeholder: '店名で検索' %>
          <div class="input-group-append">
            <%= f.submit '検索', class: 'btn-ramen-hover' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 検索結果カード一覧 -->
  <div class="row">
    <div class="col-12">
      <% if @shops.present? %>
        <!-- 件数表示 -->
        <div class="mb-3">
          <h5 class="d-flex align-items-center">
            <i class="fas fa-store me-2"></i>
            検索結果: <span class="badge bg-primary ms-2"><%= @shops.count %>件</span>
          </h5>
        </div>

        <!-- カード一覧 -->
        <div class="row">
          <% @shops.each do |shop| %>
            <div class="col-lg-4 col-md-6 col-12 mb-4">
              <%= render 'shop_card', shop: shop %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-muted mb-3 text-center">
          <div class="mb-2">
          検索結果がありません
          </div>
        </div
      <% end %>
    </div>
  </div>
</div>
