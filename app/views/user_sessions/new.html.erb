<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background-color: #F2D1B3; padding-top: 4rem;">
  <div class="row w-100 justify-content-center">
    <div class="col-md-6 col-lg-4">
          <h1 class="text-center mb-4">ログイン</h1>
          <%= form_with url: login_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="text-center mb-3">
              <%= f.submit "ログイン", class: "btn btn-lg fw-bold", style: "background-color: #8B4513; color: white; border: none; border-radius: 20px; padding: 0.5rem 1rem;" %>
            </div>
          <% end %>
          <div class='text-center'>
            <%= link_to '登録ページへ', new_user_path, class: "d-block mb-2 text-decoration-none" %>
            <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "d-block text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
