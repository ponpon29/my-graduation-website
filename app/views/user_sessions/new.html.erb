<div class="container">
  <div class="row w-100 justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h1 class="text-center mb-4"><%= t('.title') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="text-center mb-3">
          <%= f.submit t('.login'), class: "btn-ramen-hover" %>
        </div>
      <% end %>
      
      <div class="oauth-section">
        <div class="text-center mb-3">
          <p>または</p>
          <%= link_to auth_at_provider_path(provider: :google), 
              class: "btn btn-google",
              data: { turbo: false } do %>
            <i class="fab fa-google"></i>
            <%= t('.google_login') %>
          <% end %>
        </div>
      </div>
      
      <div class='text-center'>
        <%= link_to t('.to_register_page'), new_user_path, class: "d-block mb-2 text-decoration-none", style: "color: #8B4513; font-weight: 500;" %>
        <%#= link_to t('.password_forget'), new_password_reset_path, class: "d-block text-decoration-none", style: "color: #8B4513; font-weight: 500;" %>
      </div>
    </div>
  </div>
</div>
