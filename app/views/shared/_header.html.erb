<header style="position: fixed; top: 0; left: 0; right: 0; z-index: 1000;">
  <nav class='navbar navbar-expand-lg navbar-light' style="padding: 1rem; background-color: #F5F0E8;">
    <div class="container-fluid">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <span class="fs-3 fw-bold text-danger">üçú <%= t('.title') %></span>
      <% end %>
      
      <div class="d-flex">
        <% if logged_in? %>
          <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
              <%= current_user.email if current_user %>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to t('.profile'), '#', class: 'dropdown-item' %></li>
              <li><%= link_to t('.search'), maps_path, class: 'dropdown-item' %></li>
              <li><%= link_to t('.post'), boards_path, class: 'dropdown-item' %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to t('.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %></li>
            </ul>
          </div>
        <% else %>
          <%= link_to t('.login'), login_path, class: "btn btn-outline-primary me-2" %>
          <%= link_to t('.create'), new_user_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
