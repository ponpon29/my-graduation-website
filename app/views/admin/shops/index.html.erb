<div class="container">
  <h1>店舗一覧</h1>
  
  <%= link_to '新規作成', new_admin_shop_path, class: 'btn btn-primary mb-3' %>
  
  <table class="table">
    <thead>
      <tr>
        <th>店舗名</th>
        <th>住所</th>
        <th>電話番号</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @shops.each do |shop| %>
        <tr id="shop-<%= shop.id %>">
          <td><%= shop.name %></td>
          <td><%= shop.address %></td>
          <td><%= shop.phone %></td>
          <td>
            <%= link_to '削除', admin_shop_path(shop), 
                data: { 
                  turbo_method: :delete,
                  turbo_confirm: '本当に削除しますか?' 
                },
                class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= paginate @shops %>
</div>