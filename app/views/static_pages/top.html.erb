<div class="top-wrapper">
  <div class="top-inner-text text-center">
    <%= image_tag "top_image.jpg", class: "img-fluid" %>
  </div>

  <div class="text-center w-100 px-4 mt-4">
    <h1 class="display-5 fw-bold text-danger"><%= t('.title') %></h1>
    <p class="fs-4"><%= t('.subtitle') %></p>
  </div>

  <div class="d-flex flex-wrap justify-content-center gap-2 gap-md-4 mt-5 mb-5">
    <%= link_to t('.search'), search_menu_path, class: "btn-ramen-hover" %>
    <%= link_to t('.reviews'), reviews_path, class: "btn-ramen-hover" %>
    <%= link_to t('.create'), new_user_path, class: "btn-ramen-hover" %>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="text-center mb-4">
    <h2 class="fw-bold text-muted"><%= t('.how_to_use.title') %></h2>
    <p class="text-muted fs-5"><%= t('.how_to_use.subtitle') %></p>
  </div>

  <div class="row g-3 mb-5 justify-content-center">
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center py-3">
          <h5 class="fw-bold mb-2 fs-6"><%= t('.features.search.title') %></h5>
          <p class="mb-0 small"><%= t('.features.search.description').html_safe %></p>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center py-3">
          <h5 class="fw-bold mb-2 fs-6"><%= t('.features.reviews.title') %></h5>
          <p class="mb-0 small"><%= t('.features.reviews.description').html_safe %></p>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center py-3">
          <h5 class="fw-bold mb-2 fs-6"><%= t('.features.register.title') %></h5>
          <p class="mb-0 small"><%= t('.features.register.description').html_safe %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mb-4">
    <h3 class="fw-bold text-muted"><%= t('.member_features.title') %></h3>
  </div>

  <div class="row g-3 justify-content-center">
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center py-3">
          <h5 class="fw-bold mb-2 fs-6"><%= t('.member_features.post_review.title') %></h5>
          <p class="mb-0 small"><%= t('.member_features.post_review.description').html_safe %></p>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center py-3">
          <h5 class="fw-bold mb-2 fs-6"><%= t('.member_features.favorites.title') %></h5>
          <p class="mb-0 small"><%= t('.member_features.favorites.description').html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</div>
