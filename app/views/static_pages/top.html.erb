<div class="d-flex flex-column min-vh-100" style="margin-top: 4rem; background-color: #F2D1B3;">
  <div class="w-100 overflow-hidden">
    <%= image_tag "top_image.jpg", class: "w-100" %>
  </div>

  <div class="text-center w-100 px-4 mt-4">
    <h1 class="display-5 fw-bold text-danger"><%= t('.title') %></h1>
    <p class="fs-4"><%= t('.subtitle') %></p>
  </div>

  <div class="d-flex justify-content-center gap-5 mt-5 mb-5">
    <%= link_to t('.create'), new_user_path, class: 'btn btn-outline-success btn-lg fs-3 fw-bold' %>
    <%= link_to t('.search'), maps_path, class: 'btn btn-outline-success btn-lg fs-3 fw-bold' %>
  </div>
</div>
