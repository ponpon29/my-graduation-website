<div class="container">
  <div class="text-center">
    <% if @shop.photo_url.present? %>
      <%= image_tag @shop.photo_url, alt: "#{@shop.name}уБочФ╗хГП", class: "img-fluid rounded mb-3", style: "max-width: 60%; height: auto;" %>
    <% end %>
    
    <h3 class="mb-3"><%= @shop.name %></h3>
    
    <p class="mb-2">тнР <%= @shop.rating || 'шйХф╛буБкуБЧ' %></p>
    <p class="mb-3">ЁЯУН <%= @shop.address %></p>
    <p class="mb-2">ЁЯУЮ <%= @shop.phone %></p>
    
    <div class="mb-4">
      <h5 class="mb-2">ЁЯХТ хЦ╢ценцЩВщЦУ</h5>
      <ul class="list-unstyled">
        <% @shop.opening_hours.split(',').each do |hours| %>
          <li class="mb-1"><%= hours.strip %></li>
        <% end %>
      </ul>
    </div>

    <div class="d-flex justify-content-center gap-3 mb-3">
      <%= link_to t('header.create_board'), new_board_path, class: "btn btn-primary" %>
      <%= link_to "цИ╗уВЛ", maps_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
