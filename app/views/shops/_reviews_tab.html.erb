<div class="container-fluid px-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <% if @shop.reviews.any? %>
        <% if @average_rating.present? %>
          <div class="mb-3 text-center">
            <small class="text-muted">
              <%= t('defaults.average_rating') %>: <%= @average_rating %> ★
            </small>
          </div>
        <% end %>
        
        <% @shop.reviews.includes(:user).order(created_at: :desc).each do |review| %>
          <div class="card mb-2 shadow-sm">
            <div class="card-body py-3">
              <div class="d-flex align-items-center mb-2">
                <% if review.user.avatar_url %>
                  <%= image_tag review.user.avatar_url, 
                              class: 'rounded-circle me-2',
                              size: '40x40',
                              alt: "#{review.user.display_name}のアバター" %>
                <% else %>
                  <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" 
                      style="width: 40px; height: 40px;">
                    <i class="fas fa-user text-white"></i>
                  </div>
                <% end %>
                
                <div>
                  <h6 class="mb-0 text-start fs-6"><%= review.user.display_name %></h6>
                </div>
              </div>
              
              <div class="rating mb-2 text-start">
                <% review.rating.times do %>
                  <span class="text-warning">★</span>
                <% end %>
                <% (5 - review.rating).times do %>
                  <span class="text-muted">☆</span>
                <% end %>
              </div>
              
              <p class="card-text text-start mb-2 fs-6">
                <%= review.content %>
              </p>

              <% if review.review_image.present? %>
                <div class="text-center mb-3">
                  <%= image_tag review.review_image_url, 
                                class: "img-fluid rounded", 
                                style: "max-width: 100%; height: auto; max-height: 300px; object-fit: cover;",
                                alt: t('defaults.review_image') %>
                </div>
              <% end %>
              
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted fs-7">
                  <%= l review.created_at, format: :short %>
                </small>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-muted mb-3">
          <%= t('defaults.no_reviews') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
